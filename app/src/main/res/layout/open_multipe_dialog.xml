<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_padding">

    <TextView
        android:id="@+id/open_multiple_dialog_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/experimentScroller"
        android:background="@color/background">

        <LinearLayout
            android:clipChildren="true"
            android:clipToPadding="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/open_multiple_dialog_list"
            android:paddingTop="@dimen/activity_vertical_margin"></LinearLayout>
    </ScrollView>

</LinearLayout>